{
  "name": "baseline-guard",
  "version": "1.0.0",
  "description": "A GitHub Action and CLI tool that scans your JS/CSS codebase for web features not meeting your chosen Web Platform Baseline target.",
  "main": "src/index.js",
  "type": "module",
  "bin": {
    "baseline-guard": "src/index.js"
  },
  "scripts": {
    "build": "rimraf dist && ncc build src/index.js --license licenses.txt && copyfiles -u 1 node_modules/web-features/data.json dist",
    "test": "node test/test-runner.js",
    "start": "node src/index.js",
    "dry-run": "node src/index.js --dry-run",
    "run:widely": "node src/index.js --target-baseline=widely",
    "run:newly": "node src/index.js --target-baseline=newly",
    "run:2024": "node src/index.js --target-baseline=2024"
  },
  "keywords": [
    "baseline",
    "web-compatibility",
    "github-action",
    "eslint",
    "css",
    "javascript",
    "web-features"
  ],
  "author": "Tayyib Ismail",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@vercel/ncc": "^0.38.1",
    "acorn": "^8.12.1",
    "acorn-walk": "^8.3.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "copyfiles": "^2.4.1",
    "doiuse": "^4.4.0",
    "estraverse": "^5.3.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "minimist": "^1.2.8",
    "rimraf": "^5.0.5",
    "web-features": "^3.3.0"
  },
  "devDependencies": {
    "eslint": "^9.10.0"
  }
}
