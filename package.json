{
  "name": "baseline-guard",
  "version": "1.0.0",
  "description": "A GitHub Action and CLI tool that scans your JS/CSS/TS codebase for web features not meeting your chosen Web Platform Baseline target.",
  "main": "index.js",
  "type": "module",
  "bin": {
    "baseline-guard": "index.js"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser"
  },
  "scripts": {
    "build": "rimraf dist && ncc build index.js --license licenses.txt && copyfiles -u 1 node_modules/web-features/data.json dist",
    "test": "node test/test-runner.js",
    "start": "node index.js",
    "dry-run": "node index.js --dry-run",
    "run:widely": "node index.js --target-baseline=widely",
    "run:newly": "node index.js --target-baseline=newly",
    "run:2024": "node index.js --target-baseline=2024"
  },
  "keywords": [
    "baseline",
    "web-compatibility",
    "github-action",
    "eslint",
    "css",
    "javascript",
    "typescript",
    "web-features",
    "acorn",
    "linting",
    "cross-browser"
  ],
  "author": "Tayyib Ismail",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vercel/ncc": "^0.38.1",
    "acorn": "^8.12.1",
    "acorn-jsx": "^5.3.2",
    "acorn-walk": "^8.3.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "copyfiles": "^2.4.1",
    "doiuse": "^4.4.0",
    "estraverse": "^5.3.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "minimist": "^1.2.8",
    "rimraf": "^5.0.5",
    "web-features": "^3.3.0"
  },
  "devDependencies": {
    "eslint": "^9.10.0"
  }
}
